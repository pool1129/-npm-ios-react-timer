{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "ESNext",
      "target": "es6",
      "outDir": "dist",
      "lib": ["es5", "es6", "dom"],
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "sourceMap": true,
      "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  